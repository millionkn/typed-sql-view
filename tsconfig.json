{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": true,
    "declarationDir": "./dist",
    "composite": true,
    "types": [],
    "lib": [
      "ESNext",
    ]
  },
  "include": [
    "./src/*.ts",
  ],
}